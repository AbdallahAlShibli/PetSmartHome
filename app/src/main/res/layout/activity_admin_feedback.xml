<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".AdminFeedbackActivity">

    <LinearLayout
        android:id="@+id/line1"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="feedback"
            android:textColor="#236517"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:text="App In General"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/simpleRatingBar1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:isIndicator="true"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text2"
                android:text="Attendance Mechanism"
                android:textSize="13dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/simpleRatingBar2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:isIndicator="true"
                 />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line5"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text4"
                android:text="ALL Suggestions :"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>

<ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="150dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/but_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="Download As Pdf"
            android:background="#DAF5C0"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="Back To Dashboard"
            android:background="#DAF5C0"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold" />




    </LinearLayout>

</RelativeLayout>